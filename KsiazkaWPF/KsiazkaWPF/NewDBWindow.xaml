<Window x:Class="KsiazkaWPF.NewDBWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KsiazkaWPF"
        mc:Ignorable="d"
        Title="" Height="200" Width="600" MaxHeight="200" MaxWidth="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Podaj nazwę: " HorizontalAlignment="Left" Margin="25,25,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox Margin="160,30,35,0" TextWrapping="Wrap" VerticalAlignment="Top" x:Name="dbName" Height="32" TextChanged="dbName_TextChanged"/>
        <Button Content="Zapisz nazwę" FontSize="25" Margin="35,75,35,0" Height="60" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>
